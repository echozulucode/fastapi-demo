# Application Settings
APP_NAME=FastAPI Intranet Demo
APP_VERSION=1.0.0
ENVIRONMENT=development

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./app.db

# CORS - Allowed origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# LDAP Configuration (optional - for Active Directory)
LDAP_ENABLED=false
LDAP_SERVER=ldap://dc.example.com
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_BIND_DN=CN=Service Account,OU=Users,DC=example,DC=com
LDAP_BIND_PASSWORD=service-account-password
LDAP_SEARCH_BASE=OU=Users,DC=example,DC=com

# Email Configuration (optional - for password reset)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=FastAPI Intranet Demo

# Admin User (created on first run)
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis
